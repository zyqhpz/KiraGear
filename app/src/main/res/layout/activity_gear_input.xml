<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35baf6"
    tools:context=".GearInputActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="487dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="94dp">

        <TextView
            android:id="@+id/tireWidthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tire Width" />

        <Spinner
            android:id="@+id/spinnerTireWidth"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tireAspectRatioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tire Aspect Ratio" />

        <Spinner
            android:id="@+id/spinnerTireAspectRatio"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tireDiameterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tire Diameter" />

        <Spinner
            android:id="@+id/spinnerTireDiameter"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/gearRatioTitleText"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Gear Ratio"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gearOneLabel"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gear 1:" />

            <EditText
                android:id="@+id/gearOneRatioInput"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="148dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gearTwoLabel"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gear 2:" />

            <EditText
                android:id="@+id/gearTwoRatioInput"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gearThreeLabel"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gear 3:" />

            <EditText
                android:id="@+id/gearThreeRatioInput"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gearFourLabel"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gear 4:" />

            <EditText
                android:id="@+id/gearFourRatioInput"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gearFiveLabel"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gear 5:" />

            <EditText
                android:id="@+id/gearFiveRatioInput"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGenerateGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Graph" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>